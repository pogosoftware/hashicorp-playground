server           = true
bootstrap_expect = {{ consul_bootstrap_expect }}

bind_addr   = "{{ consul_bind_addr }}"
client_addr = "{{ consul_client_addr }}"
recursors   = {{ consul_recursors | to_json }}

auto_encrypt {
  allow_tls = true
}

connect {
  enabled = {{ consul_connect_enabled | lower }}
}

ui_config {
  enabled = {{ consul_ui_enabled | lower }}
}
