[all:vars]
ansible_user={{ multipass_ansible_user }}
ansible_ssh_private_key_file={{ multipass_ansible_ssh_private_key_file }}

[hcp-servers]
{% for i in multipass_hashicorp_servers %}
{{ i.name }} ansible_host={{ i.ip }}
{% endfor %}

[hcp-clients]
{% for i in multipass_hashicorp_clients %}
{{ i.name }} ansible_host={{ i.ip }}
{% endfor %}
